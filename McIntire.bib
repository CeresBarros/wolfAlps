@article{fajardo_2011,
  title = {Under strong niche overlap conspecifics do not compete but help each other to survive: facilitation at the intraspecific level},
  volume = {99},
  url = {http://doi.wiley.com/10.1111/j.1365-2745.2010.01771.x},
  doi = {10.1111/j.1365-2745.2010.01771.x},
