@article{beguin_explaining_2013,
  title = {Explaining {{Geographic Gradients}} in {{Winter Selection}} of {{Landscapes}} by {{Boreal Caribou}} with {{Implications}} under {{Global Changes}} in {{Eastern Canada}}},
