  keywords = {Mast seeding,Pinus albicaulis,Pollen coupling,Pollination efficiency,Reproductive ecology,Reproductive synchrony,Seed production,Sex ratio},
  file = {Attachment:C\:\\Eliot\\Databases\\Zotero\\storage\\3NHBSX9K\\Rapp, McIntire, Crone - 2013 - Sex allocation, pollen limitation and masting in whitebark pine.pdf:application/pdf;Attachment:C\:\\Eliot\\Databases\\Zotero\\storage\\EWX9FXK8\\Rapp, McIntire, Crone - 2013 - Sex allocation, pollen limitation and masting in whitebark pine.html:}
