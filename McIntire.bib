  author = {McIntire, Eliot J. B. and Schultz, Cheryl B. and Crone, Elizabeth E.},
  date = {2007},
  pages = {725--736},
  keywords = {Fender's blue butterfly,Folder - BCRWvsFL,Folder - Fortin Proposal,Folder - NSERC Discovery 2011,Folder - SAAS,Habitat connectivity,Landscape model,Reserve design,Restoration,Spatially explicit individual-based model,Stepping stones},
